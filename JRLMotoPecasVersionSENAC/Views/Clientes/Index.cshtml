@model IEnumerable<JRLMotoPecasVersionSENAC.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<br />

<div class="span7">
    <div class="widget stacked widget-table action-table">
        <div class="widget-header">
            <div class="container">
                <div class="row no-gutters">
                    <div class="col-sm-10">
                        <i class="icon-th-list"></i>
                        <h3>Lista de Clientes</h3>
                    </div>
                </div>

            </div> <!-- /widget-header -->

            <div class="widget-content">

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sobrenome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataNascimento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CPF)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sobrenome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataNascimento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CPF)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-small btn-warning">Editar</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-small btn-info">Detalhes</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-small btn-danger">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div> <!-- /widget-content -->

        </div> <!-- /widget -->

